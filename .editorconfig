# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{c, h}]
indent_style = tab
indent_size = 1

[Dockerfile]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
